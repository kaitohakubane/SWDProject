<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url"/>
        <property name="connection.driver_class"/>
        <property name="connection.username"/>
        <property name="connection.password"/>
        <mapping class="com.sneakergo.entity.AccountEntity"/>
        <mapping class="com.sneakergo.entity.AttributeEntity"/>
        <mapping class="com.sneakergo.entity.BillEntity"/>
        <mapping class="com.sneakergo.entity.BillDetailEntity"/>
        <mapping class="com.sneakergo.entity.ImportEntity"/>
        <mapping class="com.sneakergo.entity.ImportDetailEntity"/>
        <mapping class="com.sneakergo.entity.ProductEntity"/>
        <mapping class="com.sneakergo.entity.SaleEntity"/>
        <mapping class="com.sneakergo.entity.SaleProductEntity"/>
        <mapping class="com.sneakergo.entity.StockEntity"/>
        <!-- DB schema will be updated if needed -->
        <!-- <property name="hbm2ddl.auto">update</property> -->
    </session-factory>
</hibernate-configuration>